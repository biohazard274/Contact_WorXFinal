@model MyContacts.Models.Address

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"  aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <button type="button" class="btn-close position-absolute right-2 top-2" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="row p-4 ">
                <h2 class="font-weight-bold text-center text-xl">Create a new contact</h2>
                <div class="col">
                    <div class="card mt-2 shadow">
                        <p class="font-weight-bold my-1 text-muted text-center text-md">Contact Info</p>
                        <form>
                            <input asp-for="Contact.Id" hidden />
                            <input asp-for="Contact.FirstName" hidden />
                                   <input asp-for="Contact.LastName" hidden />
                            
                                <div class="row ml-3 ">
                                    <div class="row form-floating my-2">
                                        <select asp-for="Country" id="country" class='form-select'><option value="">Select a country</option></select>
                                        <label for="country">Contact's Country</label>
                                    </div>
                                    <div class="row form-floating my-2">
                                        <select asp-for="State" id="region" class="form-select"><option value="">Select a state</option></select>
                                        <label for="region">Contact's State</label>
                                    </div>
                                    <div class="row form-floating my-2">
                                        <select asp-for="City" id="city" class='form-select'><option value="">Select a city</option></select>
                                        <label for="city">Contact's City</label>
                                    </div>
                                    <div class="row form-floating my-2">
                                        <input asp-for="StreetAddress" id="floatingStreetName" class='form-control' placeholder="3 Dream str" />
                                        <label for="floatingStreetName">Contact's Street Address</label>

                                    </div>
                                </div>

                        </form>
                    </div>
                </div>
                <div class="mt-sm-3 text-right"><button class="btn btn-primary profile-button" data-save="NewAddress" type="button">Next</button></div>
            </div>
        </div>
    </div>
</div>
