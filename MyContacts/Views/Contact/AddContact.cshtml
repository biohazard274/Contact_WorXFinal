@model MyContacts.Models.Contact

    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content">
                <button type="button" class="btn-close position-absolute right-2 top-2" onclick="hideModal()" aria-label="Close"></button>
                <div class="row p-4 text-center">
                    <h2 class="font-weight-bold text-xl">Create a new contact</h2>
                    <div class="col">
                        <div class="card mt-2 shadow">
                            <p class="font-weight-bold my-1 text-muted text-md">Contact Info</p>
                            <form class="">
                                <div class="p-3 pt-0">
                                    <div class="row mt-1">
                                        <div class="col form-floating">
                                            <input asp-for="FirstName" type="text" class="form-control" id="floatingFirstName" placeholder="John">
                                            <label for="floatingFirstName">Contact's First Name</label>
                                        </div>
                                        <div class="col form-floating">
                                            <input asp-for="LastName" type="text" class="form-control" id="floatingLastName" placeholder="John">
                                            <label for="floatingLastName">Contact's Last Name</label>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col">
                                            <input class="form-control text-center" asp-for="DateOfBirth" type="date" data-dd-opt-custom-class="dd-theme-dd-theme-bootstrap">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="mt-sm-3 text-right"><button class="btn btn-primary profile-button" data-save="NewContact" type="button">Next</button></div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/datedropper-javascript.js"></script>
    <script>
        new dateDropper({
            selector: 'input[type="date"]',
            customClass: 'dd-theme-dd-theme-bootstrap',
            autoFill: false
        });
    </script>
